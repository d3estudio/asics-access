<table width="100%" bgcolor="#5D5D5D" cellpadding="0" cellspacing="0" border="0" id="backgroundTable" st-sortable="full-text">
    <tbody>
    <tr>
        <td>
            <table width="600" cellpadding="0" cellspacing="0" border="0" align="center" class="devicewidth">
                <tbody>
                <tr>
                    <td width="100%">
                        <table bgcolor="#F9F9F9" width="600" cellpadding="0" cellspacing="0" border="0" align="center"
                               class="devicewidth">
                            <tbody>
                            <tr>
                                <td>
                                    <table width="500" align="center" cellpadding="0" cellspacing="0" border="0"
                                           class="devicewidthinner">
                                        <tbody>
                                        <!-- Title -->
                                        <tr>
                                            <td style="font-family: Helvetica, arial, sans-serif; font-size: 20px; font-weight: 600; color: #101061; line-height: 26px;">
                                                Olá, <%= @user.name %>.<br>Você foi convidado para Casa Asics
                                            </td>
                                        </tr>
                                        <!-- End of Title -->
                                        <!-- spacing -->
                                        <tr>
                                            <td width="100%" height="20"
                                                style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                                &nbsp;</td>
                                        </tr>
                                        <!-- End of spacing -->
                                        <!-- content -->
                                        <tr>
                                            <td style="font-family: Helvetica, arial, sans-serif; font-size: 14px; color: #848484; line-height: 20px;">
                                                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                                Tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
                                                veniam,
                                                quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                            </td>
                                        </tr>
                                        <!-- End of content -->
                                        <!-- Spacing -->
                                        <tr>
                                            <td width="100%" height="50"
                                                style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                                &nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                        <!-- Button -->
                                        <tr>
                                            <td height="60" align="center" valign="middle"
                                                style="font-family: Helvetica, Arial, sans-serif; font-size: 20px; font-weight:400; text-align:center; -webkit-text-size-adjust:none;">
                                                <a style="text-decoration: none; text-align:center;"
                                                   href="http://asicshub.com.br/rsvp/confirm/<%= @user.invite_token %>">
                                                    <div id="button" style="background-color: #1DADD7; width: 70%; height: 70px;  margin: 0 auto; border-radius: 5px">
                                                        <div style="color: #ffffff; text-align:center; line-height: 70px">
                                                            CONFIRMAR PRESENÇA
                                                        </div>
                                                    </div>
                                                </a>
                                            </td>
                                        </tr>
                                        <!-- End of Button -->
                                        <!-- Spacing and row -->
                                        <tr>
                                            <td height="60"
                                                style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                                &nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td style="background:none; border:solid 2px #F1F1F1; border-width:2px 0 0 0; height:2px; width:100%; margin:0px 0px 0px 0px; padding-top:5px;padding-bottom:5px;">
                                                &nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td height="10"
                                                style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                                &nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                        <!-- content -->
                                        <tr>
                                            <td style="font-family: Helvetica, arial, sans-serif; font-size: 14px; color: #848484; line-height: 20px;">
                                                Se preferir, você pode confirmar sua presença colando o link abaixo no
                                                seu navegador. Após a confirmação, uma nova mensagem contendo seu código
                                                de acesso lhe será enviada.
                                            </td>
                                        </tr>
                                        <!-- End of content -->
                                        <!-- Link -->
                                        <tr>
                                            <td height="55" align="center" valign="middle"
                                                style="font-family: Helvetica, Arial, sans-serif; font-size: 13px; font-weight:400; text-align:left; -webkit-text-size-adjust:none;">
                                                <div id="link" style="background-color: #EDEDED; width: 100%; height: 35px; border-radius: 5px;  text-indent: 20px;  line-height: 35px;">
                                                    <div style="color: #7474E8;">
                                                        http://asicshub.com.br/rsvp/confirm/<%= @user.invite_token %>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <!-- End of Link -->
                                        <!-- Spacing -->
                                        <tr>
                                            <td width="100%" height="80"
                                                style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                                &nbsp;</td>
                                        </tr>
                                        <!-- Spacing -->
                                        <!-- Ending message -->
                                        <tr>
                                            <td style="font-family: Helvetica, arial, sans-serif; font-size: 10px; text-align: center; color: #848484; line-height: 12px;">
                                                Não consegue visualizar a mensagem?<br>
                                                Acesse em seu <a href="#">navegador</a>
                                            </td>
                                        </tr>
                                        <!-- End of Ending message -->
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <!-- Spacing -->
                            <tr>
                                <td height="20" style="font-size:1px; line-height:1px; mso-line-height-rule: exactly;">
                                    &nbsp;</td>
                            </tr>
                            <!-- Spacing -->
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
